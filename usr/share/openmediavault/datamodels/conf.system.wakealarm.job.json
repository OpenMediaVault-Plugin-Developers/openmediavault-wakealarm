{
	"type": "config",
	"id": "conf.system.wakealarm.job",
	"title": "Wakealarm job",
	"queryinfo": {
		"xpath": "//system/wakealarm/jobs/job",
		"iterable": true,
		"idproperty": "uuid"
	},
	"properties": {
		"uuid": {
			"type": "string",
			"format": "uuidv4"
		},
		"enable": {
			"type": "boolean",
			"default": false
		},
		"minute": {
			"type": "string",
			"pattern": "^[0-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|[*]$"
		},
		"everynminute": {
			"type": "boolean",
			"default": false
		},
		"hour": {
			"type": "string",
			"pattern":"^[0-9]|1[0-9]|2[0-3]|[*]$"
		},
		"everynhour": {
			"type":"boolean",
			"default": false
		},
		"month": {
			"type": "string",
			"pattern": "^[1-9]|1[0-2]|[*]$"
		},
		"dayofmonth": {
			"type": "string",
			"pattern": "^[1-9]|1[0-9]|2[0-9]|3[0-1]|[*]$"
		},
		"everyndayofmonth": {
			"type": "boolean",
			"default": false
		},
		"dayofweek": {
			"type": "string",
			"pattern": "^[1-7]|[*]$"
		},
		"comment": {
			"type": "string",
			"default": ""
		}
	}
}
